@model User

<div class="m-1 text-danger" asp-validation-summary="All"></div>

<div class="container">
    <div class="row">
        <h5 class="mb-3" style="text-align: center;">Регистрация</h5>
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" name="returnUrl" />
                <div class="form-group mb-3">
                    <label>Введите ФИО</label>
                    <input class="form-control" asp-for="@Model.Name" />
                </div>
                <div class="form-group mb-3">
                    <label>Введите логин</label>
                    <input asp-for="@Model.Login" class="form-control" />
                </div>
                <div class="form-group mb-5">
                    <label>Введите пароль</label>
                    <input asp-for="@Model.Password" type="text" class="form-control" />
                </div>
                <div class="form-group mt-3">
                    <button class="col-12 btn btn-primary"
                            type="submit">
                        Зарегистрироваться
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>


@model MShop.Models.User

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" name="returnUrl" />
                <div class="form-group mb-3">
                    <label>Имя пользователя</label>
                    <input class="form-control" asp-for="@Model.Login" />
                </div>
                <div class="form-group">
                    <label>Пароль</label>
                    <input asp-for="@Model.Password" type="password" class="form-control" />
                </div>

                <a href="/Home/Registration">Регистрация</a>

                <div class="form-group mt-3">
                    <button class="btn btn-primary"
                            type="submit">
                        Войти
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>


